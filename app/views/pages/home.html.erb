<% if current_user %>
    <%= current_user.inspect %>
  <div class="personal">Здравствуйте, <%= current_user.name %>
    <%= image_tag(current_user.image) %>
  </div>

    <% @vk = VkontakteApi::Client.new %>
    <% @friends = @vk.friends.get(user_ids: current_user.uid, count: "5000", access_token: current_user.token , v: "5.1", fields: ["photo_50"]) %>
    <% @friends.sample(5).items.each do |friend| %>
        <% first_name = friend.first_name %>
        <% last_name = friend.last_name %>
        <% image = friend.photo_50 %>
        <div>
          <span><%= first_name %></span>
          <span><%= last_name %></span>
          <%= image_tag(image) %>
        </div>
    <% end %>
<% end %>

<% unless current_user %>
  <%= link_to "Вход через ВКонтакте", user_vkontakte_omniauth_authorize_path %>
<% else %>
  <%= link_to "Выход", destroy_user_session_path, method: :delete %>
<% end %>